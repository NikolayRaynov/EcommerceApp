@model IEnumerable<ProductIndexViewModel>

@{
    ViewBag.Title = "Favorite Products";
}

<h2 class="text-center">@ViewBag.Title</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["ErrorMessage"]
    </div>
}

<div class="text-center row justify-content-center">
    @foreach (var product in Model)
    {
        <div class="card col-3 h-80" style="width: 22%; margin: 0.5rem;">
            <h4 class="card-title">@product.Name</h4>
            <div id="carouselExampleIndicators_@product.Id" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @if (product.ImageUrls != null && product.ImageUrls.Any())
                    {
                        for (int i = 0; i < product.ImageUrls.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@product.ImageUrls[i]" class="d-block w-100" style="height: 200px; object-fit: cover;" alt="@product.Name">
                            </div>
                        }
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <img src="~/images/NoPhoto.jpg" class="d-block w-100" style="height: 200px; object-fit: cover;" alt="No Image">
                        </div>
                    }
                    </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators_@product.Id" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators_@product.Id" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="card-body">
                <h6 class="card-text" style="max-height: 15rem; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 10; -webkit-box-orient: vertical;">
                    @product.Price.ToString("F2")€
                </h6>
            </div>
            <div class="card-body">
                <h6 class="card-text" style="max-height: 15rem; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 10; -webkit-box-orient: vertical;">
                    @product.Description
                </h6>
            </div>
            <div class="row gx-0">
                <div class="col-12 px-1">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-success btn-sm mb-2 w-100 fw-bold rounded btn-dark-text">View Details</a>
                </div>
                <div class="col-12 px-1">
                    <form asp-controller="FavoriteProduct" asp-action="Delete" method="get">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-danger btn-sm mb-2 w-100 fw-bold rounded btn-dark-text">Remove from Favorites</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}