@model AddToFavoriteViewModel

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["ErrorMessage"]
    </div>
}

@{
    ViewBag.Title = "Add to Favorites";
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="text-center row justify-content-center">
    <div class="card col-3 h-100" style="width: 20rem; margin: 0.5rem;">
        <div id="carouselExampleIndicators_@Model.ProductId" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @if (Model.ProductImageUrls != null && Model.ProductImageUrls.Any())
                {
                    for (int i = 0; i < Model.ProductImageUrls.Count; i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@Model.ProductImageUrls[i]" class="d-block w-100" style="height: 200px; object-fit: cover;" alt="@Model.ProductName">
                        </div>
                    }
                }
                else
                {
                    <div class="carousel-item active">
                        <img src="~/images/NoPhoto.jpg" class="d-block w-100" style="height: 200px; object-fit: cover;" alt="No Image">
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators_@Model.ProductId" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators_@Model.ProductId" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <div class="card-body">
            <h4 class="card-title">@Model.ProductName</h4>
            <p class="card-text">@Model.ProductPrice.ToString("F2")€</p>
            <p class="card-text">@Model.ProductDescription</p>
        </div>
        <div class="row gx-0">
            <div class="col-12 px-1">
                <form asp-action="Add" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ProductId" />
                    <button type="submit" class="btn btn-primary btn-sm mb-2 w-100 fw-bold rounded btn-dark-text">Add to Favorites</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}