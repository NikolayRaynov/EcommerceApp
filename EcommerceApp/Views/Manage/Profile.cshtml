@model ProfilePictureViewModel

@{
    ViewData["Title"] = "Manage Profile";
    string fullUrl = $"{Model.ProfilePictureUrl}?v={Model.ProfilePictureVersion}";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">

        <div class="mb-3">
            <h3>Current Picture</h3>
            <img src="@fullUrl" alt="Current Profile"
                 style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover; border: 3px solid #ccc;" />
        </div>

        <form method="post" enctype="multipart/form-data"
              asp-area="" asp-controller="Manage" asp-action="UploadProfilePicture">

            <h4>Change Profile Picture</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProfileImage"></label>
                <input asp-for="ProfileImage" type="file" class="form-control" />
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Upload New Picture</button>
        </form>
    </div>
</div>