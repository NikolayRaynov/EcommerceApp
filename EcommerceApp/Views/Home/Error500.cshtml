@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>500 - Internal Server Error</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.9.6/lottie.min.js"></script>
    <link rel="stylesheet" href="~/css/error500.css" />
    <script src="~/js/error500.js"></script>
</head>
<body>
    <div class="error-container">
        <h1>Internal Server Error</h1>
        <div id="lottie-500" class="lottie-animation"></div>
        <div class="error-content">
            <h1>500</h1>
            <p>The server was unable to complete your request. Please try again later.</p>
            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a>
        </div>
    </div>
</body>
</html>
