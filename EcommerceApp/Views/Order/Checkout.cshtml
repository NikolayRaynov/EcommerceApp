@model EcommerceApp.Web.ViewModels.Order.OrderCheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h1 class="text-center mb-4">Checkout</h1>

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow p-4">
            <h4 class="card-title mb-3">Order Summary</h4>
            <hr />

            <table class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Image</th>
                        <th>Product</th>
                        <th>Description</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-end">Price</th>
                        <th class="text-end">Total</th>
                    </tr>
                </thead>
            </table>

            <hr />

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5>Total:</h5>
                <h4 class="fw-bold text-success">@Model.TotalAmount.ToString("F2") @Model.CurrencySymbol</h4>
            </div>

            <form asp-action="CreateCheckoutSession" method="post">
                <div class="form-group mb-3">
                    <label asp-for="ShippingAddress" class="form-label fw-semibold">Shipping Address</label>
                    <input asp-for="ShippingAddress" class="form-control" placeholder="Enter your delivery address" />
                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="bi bi-credit-card"></i> Pay with Stripe
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://js.stripe.com/v3/"></script>
    <partial name="_ValidationScriptsPartial" />
}