@model OrderDetailViewModel

@{
    ViewData["Title"] = "Order Details";
}

<h1 class="text-center">Order Details</h1>
<hr />

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card p-4 mb-4">
            <h4 class="card-title">Order Information</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Order ID:</strong> @Model.OrderId</li>
                <li class="list-group-item"><strong>Order Date:</strong> @Model.OrderDate.ToShortDateString()</li>
                <li class="list-group-item"><strong>Status:</strong> @Model.Status</li>
                <li class="list-group-item"><strong>Shipping Address:</strong> @Model.ShippingAddress</li>
                <li class="list-group-item"><strong>Total Amount:</strong> @Model.TotalAmount.ToString("F2") EUR</li>
            </ul>
        </div>

        <div class="card p-4">
            <h4 class="card-title">Products in Order</h4>
            <hr />
            @if (Model.OrderItems.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.OrderItems)
                    {
                        var carouselId = $"carousel-item-{Model.OrderId}";
                        var imageUrls = item.ImageUrls.ToList();

                        <li class="list-group-item">
                            <div class="d-flex align-items-center">

                                @if (imageUrls.Any())
                                {
                                    <div id="@carouselId" class="carousel slide" data-bs-ride="carousel" style="width: 100px; height: 100px; overflow: hidden;">

                                        <div class="carousel-indicators">
                                            @for (int i = 0; i < imageUrls.Count; i++)
                                            {
                                                <button type="button" data-bs-target="#@carouselId" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                                            }
                                        </div>

                                        <div class="carousel-inner">
                                            @for (int i = 0; i < imageUrls.Count; i++)
                                            {
                                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                                    <img src="@imageUrls[i]" alt="@item.ProductName" class="d-block w-100 h-100 img-thumbnail" style="object-fit: fill;">
                                                </div>
                                            }
                                        </div>

                                        @if (imageUrls.Count > 1)
                                        {
                                            <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Previous</span>
                                            </button>
                                            <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Next</span>
                                            </button>
                                        }
                                    </div>
                                }

                                <div class="ms-3">
                                    <h5>@item.ProductName</h5>
                                    <p>@item.Description</p>
                                    <p class="mb-0">Quantity: @item.Quantity</p>
                                    <p class="mb-0">Price: @item.Price.ToString("F2") BGN</p>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No products found in this order.</p>
            }
        </div>
    </div>
</div>