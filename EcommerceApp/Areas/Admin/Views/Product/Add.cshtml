@model AddProductViewModel

@{
    ViewBag.Title = "Add New Product";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h1 class="text-center mb-4">Add New Product</h1>
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4 p-md-5">
                    <form asp-area="Admin" asp-controller="Product" asp-action="Add" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Name" class="form-control" placeholder="Product Name" />
                            <label asp-for="Name">Name</label>
                            <span asp-validation-for="Name" class="text-danger mt-1"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="Description" class="form-control" placeholder="Product Description" style="height: 150px;"></textarea>
                            <label asp-for="Description">Description</label>
                            <span asp-validation-for="Description" class="text-danger mt-1"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Price" class="form-control" placeholder="Price" />
                            <label asp-for="Price">Price</label>
                            <span asp-validation-for="Price" class="text-danger mt-1"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <select asp-for="CategoryId" class="form-select"
                                    asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"
                                    id="categorySelect">
                                <option value="">-- Select --</option>
                            </select>
                            <label for="categorySelect">Category</label>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Images</label>
                            <input asp-for="Images" type="file" multiple class="form-control" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Add Product</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}