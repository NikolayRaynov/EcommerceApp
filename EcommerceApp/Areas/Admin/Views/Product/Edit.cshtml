@model EditProductViewModel

@{
    ViewBag.Title = "Edit Product";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h1 class="text-center mb-4">Edit Product</h1>
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Image" />

                        <div class="form-floating mb-4">
                            <input asp-for="Name" class="form-control" />
                            <label asp-for="Name" class="control-label"></label>
                            <span asp-validation-for="Name" class="text-danger mt-1"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Description" class="form-control" />
                            <label asp-for="Description" class="control-label"></label>
                            <span asp-validation-for="Description" class="text-danger mt-1"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Price" class="form-control" />
                            <label asp-for="Price" class="control-label"></label>
                            <span asp-validation-for="Price" class="text-danger mt-1"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Image:</label>
                            <img src="@Model.Image" alt="" style="max-width: 200px;" class="d-block border rounded" />
                        </div>
                        <div class="mb-4">
                            <label asp-for="ImageFile" class="control-label">Upload image</label>
                            <input asp-for="ImageFile" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger mt-1"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
