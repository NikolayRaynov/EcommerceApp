@model ProductDetailsViewModel
@using static EcommerceApp.Common.ApplicationConstants

@{
    ViewBag.Title = "Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h1 class="text-center mb-4">Product Details</h1>

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4 p-md-5">
                    <div class="mb-4 text-center">
                        @if (Model.ImageUrls != null && Model.ImageUrls.Any())
                        {
                            <div id="imageCarousel" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner rounded">
                                    @for (int i = 0; i < Model.ImageUrls.Count; i++)
                                    {
                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                            <img src="@Model.ImageUrls[i]" class="d-block w-100"
                                                 alt="@Model.Name"
                                                 style="height: 250px; object-fit: fill; border-radius: 8px;">
                                        </div>
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                </button>
                            </div>
                        }
                        else
                        {
                            <img src="~/images/NoPhoto.jpg" class="img-fluid rounded"
                                 alt="@Model.Name" style="height: 250px; object-fit: fill;">
                        }
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Name</label>
                        <p class="form-control-plaintext">@Model.Name</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Description</label>
                        <p class="form-control-plaintext">@Model.Description</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Price</label>
                        <p class="form-control-plaintext text-success fw-semibold">@Model.Price.ToString("C")</p>
                    </div>
                </div>
            </div>
            <h4 class="mt-5 mb-3">Reviews:</h4>

            @if (Model.Reviews.Any())
            {
                <ul class="list-group mb-3">
                    @foreach (var review in Model.Reviews.Take(3))
                    {
                        <li class="list-group-item">
                            <p><strong>@review.User</strong> (@review.CreatedAt)</p>
                            <p>@review.Comment</p>
                            <p>
                                Rating:
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= review.Rating)
                                    {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-muted"></i>
                                    }
                                }
                            </p>
                            <div class="d-flex gap-2">
                                <a asp-controller="Review" asp-action="Edit" asp-route-id="@review.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-controller="Review" asp-action="Delete" asp-route-id="@review.Id" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </li>
                    }
                </ul>

                @if (Model.Reviews.Count > 3)
                {
                    <a asp-controller="Review" asp-action="Index" asp-route-productId="@Model.Id" class="btn btn-outline-secondary">
                        View All Reviews
                    </a>
                }
            }
            else
            {
                <p>No reviews yet.</p>
            }
            <div class="d-flex gap-2 mt-4">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <a asp-controller="Review" asp-action="Add" asp-route-productId="@Model.Id" class="btn btn-primary">Add Review</a>
                }
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
