@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<h1 class="text-center my-4">Admin Dashboard</h1>

<div class="container-fluid">
    <div class="row my-5">
        <div class="col-lg-6 col-md-12">
            <h3>Product Count by Category</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="bg-light">
                        <tr>
                            <th>Category Name</th>
                            <th>Product Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductsByCategory)
                        {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>@item.ProductCount</td>
                            </tr>
                        }
                        @if (!Model.ProductsByCategory.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center">No products found in any category.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-lg-6 col-md-12">
            <h3>Low Stock Products</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="bg-light">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LowStockQuantities)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.StockQuantity</td>
                            </tr>
                        }
                        @if (!Model.LowStockQuantities.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center">All products are in stock.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row g-4">
        <div class="col-lg-6 col-md-12 mb-4">
            <h3>Order Status Distribution</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="bg-light">
                        <tr>
                            <th>Status</th>
                            <th>Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderStatusDistribution)
                        {
                            <tr class="@(item.StatusName == "Delivered" ? "table-success" :
                                 item.StatusName == "Cancelled" ? "table-danger" :
                                 item.StatusName == "Pending" ? "table-warning" : "")">
                            <td>@item.StatusName</td>
                            <td>@item.Count</td>
                        </tr>
                                                }
                        @if (!Model.OrderStatusDistribution.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center">No orders found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card bg-primary text-white shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <i class="fas fa-box-open fa-3x"></i>
                    <div>
                        <div class="text-white-75 small">Total Orders</div>
                        <h2 class="mb-0">@Model.TotalOrders</h2>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-area="" asp-controller="Order" asp-action="OrderHistory">View Orders</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-12">
            <h3>Recent Orders</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="recent-orders-table">
                    <thead class="bg-light">
                        <tr>
                            <th>Order ID</th>
                            <th>User</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Order Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td>@order.OrderId</td>
                                <td>@order.UserId</td>
                                <td>@order.TotalAmount.ToString("F2") BGN</td>
                                <td>@order.Status</td>
                                <td>@order.OrderDate.ToString("d")</td>
                                <td>
                                    <a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="Order" asp-action="OrderDetails" asp-route-id="@order.OrderId">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
}